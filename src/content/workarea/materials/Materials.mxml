<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="720" height="200" xmlns:local="*" xmlns:materials="content.workarea.materials.*" creationComplete="initCollection(event)">
	<s:layout>
		<s:BasicLayout/>
	</s:layout>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			private var _baseImageURL:String = "";
			// YouTube image thumbnail looks like this:   http://img.youtube.com/vi/xxxxxxxxxxx/1.jpg
			// Size is 120x90
			private var _youtubeBaseImageURL:String = "http://img.youtube.com/vi/";
			
			// YouTube video looks like this: http://www.youtube.com/v/agY1PPsq6oA
			private var _youtubeBaseVideoURL:String = "http://www.youtube.com/v/"; 
			
			private var testPreviewSource:String = _youtubeBaseImageURL + "hCSPf5Viwd0" + "/1.jpg";
			private var testFullSizeSource:String = "hCSPf5Viwd0";
			private var test2PreviewSource:String = _youtubeBaseImageURL + "agY1PPsq6oA" + "/1.jpg";
			private var test2FullSizeSource:String = _youtubeBaseImageURL + "agY1PPsq6oA" + "/0.jpg";
			
			protected function initCollection(event:FlexEvent):void {
					this.currentState = "graphicState";
					
					var newItem:MaterialsItem = new MaterialsItem();
					newItem.id = "ID " + "1";
					newItem.setupPreview("video", testFullSizeSource, testPreviewSource);
					materialItems.addElement(newItem);

					var newItem2:MaterialsItem = new MaterialsItem();
					newItem2.id = "ID " + "2";
					newItem2.setupPreview("image", test2FullSizeSource, test2PreviewSource);
					materialItems.addElement(newItem2);
			}
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="graphicState" />
		<s:State name="textState" />
	</s:states>
	
	<s:Scroller width="100%" height="100%">
		<s:Group id="graphicGroup">
			<s:HGroup id="materialItems"></s:HGroup>
		</s:Group>
	</s:Scroller>
</s:Group>
