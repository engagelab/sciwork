<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true" minHeight="30" creationComplete="initRenderer(event)">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			protected function initRenderer(event:FlexEvent):void {
				itemBackground.color = uint(mx.core.FlexGlobals.topLevelApplication.currentGroup.colour);
			}
		]]>
	</fx:Script>
	
	<s:Rect left="5" right="5" top="5" bottom="5" radiusX="5" radiusY="5">
		<s:fill>
			<s:SolidColor id="itemBackground" alpha="{data.al}" />
		</s:fill>
	</s:Rect>
	<s:VGroup top="10" right="10" bottom="10" left="10" >
		<s:Label text="{data.from+':'}" width="100%" color="#FFFFFF" />
		<s:Label text="{data.bdy}" width="100%" color="#FFFFFF" />
	</s:VGroup>
</s:ItemRenderer>
