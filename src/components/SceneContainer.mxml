<?xml version="1.0" encoding="utf-8"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx">
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			import spark.components.CheckBox;
			public function initScene(scene:Object):void {
				label = scene.label;
				sceneId = scene.sceneId;
				
				var cb:CheckBox;
				for each (var task:Object in scene.tasks as ArrayCollection) {
					cb = new CheckBox();
					cb.selected = true;
					sceneGroup.addElement(cb);
				}
				
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<fx:String id="label" />
		<fx:String id="sceneId" />
	</fx:Declarations>
	
	
	<s:HGroup id="sceneGroup" verticalAlign="bottom">
		<s:Button id="scene" width="20" height="20" />
	</s:HGroup>
</s:HGroup>
