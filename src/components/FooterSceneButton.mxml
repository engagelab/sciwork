<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					  xmlns:s="library://ns.adobe.com/flex/spark" 
					  xmlns:mx="library://ns.adobe.com/flex/mx" width="30" height="30" cornerRadius="4" mouseOver.default="this.currentState='over'" mouseOut.over="this.currentState='default'">
	<fx:Script>
		<![CDATA[
			import utils.ColorUtil;
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<fx:String id="imgUrl" />
		<fx:String id="lastState" />
	</fx:Declarations>
	
	<s:states>
		<s:State name="default" />
		<s:State name="selected" />
		<s:State name="over" />
	</s:states>

	<s:Rect width="100%" height="100%" radiusX="4" radiusY="4">
		<s:fill>
			<s:SolidColor color.selected="{uint(mx.core.FlexGlobals.topLevelApplication.currentGroup.colour)}" color.default="#333333" color.over="{ColorUtil.brightenColor(uint(mx.core.FlexGlobals.topLevelApplication.currentGroup.colour), 20)}" />
		</s:fill>
	</s:Rect>
	<s:Image width="20" height="20" source="{imgUrl}" horizontalCenter="0" verticalCenter="0" />
</s:BorderContainer>
