<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="400" height="300">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			// Data includes URL to album cover.
			[Bindable]
			private var initDG:ArrayCollection = new ArrayCollection([
				{Artist:'Pavement', Album:'Slanted and Enchanted', 
					Price:11.99, Cover:'assets/simu/pics/crossBG.png'},
				{Artist:'Pavement', Album:'Brighten the Corners', 
					Price:11.99, Cover:'assets/simu/pics/stop.png'}
			]);
			
			public function refreshData(sceneID:String=""):void {
				
			}
			
		]]>
	</fx:Script> 
	
	<s:DataGrid id="myGrid" 
				dataProvider="{initDG}"
				variableRowHeight="true">   
		<s:columns>
			<s:ArrayList>
				<s:GridColumn dataField="Artist"/>
				<s:GridColumn dataField="Album" itemRenderer="itemRenderers.PortfolioItemRenderer"/>
				<s:GridColumn dataField="Price"/>
			</s:ArrayList>
		</s:columns>       
	</s:DataGrid>
		
</s:Group>
