<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
					   xmlns:s="library://ns.adobe.com/flex/spark" 
					   xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:local="*" xmlns:materials="content.workarea.materials.*" creationComplete="initApp(event)">
	
	<fx:Metadata>
		[ResourceBundle("resources")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import listeners.LoginAcceptedEvent;
			
			import mx.events.FlexEvent;
			
			protected function initApp(event:FlexEvent):void {
				this.addEventListener(resourceManager.getString('resources', 'SERVER_URL'), handleLoginAccepted);
				
				// FOR TESTING: In the case of no server connection
				this.currentState = "loggedIn";
			}
			
			protected function handleLoginAccepted(evt:LoginAcceptedEvent):void {
				if(evt.groupId == resourceManager.getString('resources', 'TEACHER_LOGIN_ID')) {
					this.currentState = "loggedInTeacher";
				}
				else {
					this.currentState = "loggedIn";
				}
			}
			
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="loggedOff" />
		<s:State name="loggedIn" />
		<s:State name="loggedInTeacher" />
	</s:states>
	
	<s:VGroup top="10" left="10" right="10" bottom="10">
		<!-- Header banner component -->
		<local:Header />
		
		<!-- Logging component -->
		<local:GroupLogger id="groupLogger" width="100%" height="100%" includeIn="loggedOff" />
		
		<!-- Tabbar component -->
		<local:Tabbar width="100%" excludeFrom="loggedOff"/>
		
		<!-- Student space -->
		<s:Group includeIn="loggedIn" width="100%" height="100%">
			<materials:CollectionList id="collectionList" x="360" y="700" />
		</s:Group>
		
		<!-- Teacher space -->
		<s:Group includeIn="loggedInTeacher" width="100%" height="100%">
			<s:Label text="welcome teacher" horizontalCenter="0" verticalCenter="0" />
		</s:Group>
	</s:VGroup>
	
	
</s:WindowedApplication>
