<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
					   xmlns:s="library://ns.adobe.com/flex/spark" 
					   xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:local="*" xmlns:materials="content.workarea.materials.*" creationComplete="initApp(event)" showStatusBar="false">
	
	<fx:Metadata>
		[ResourceBundle("resources")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import flash.net.dns.AAAARecord;
			
			import listeners.LoginAcceptedEvent;
			import listeners.SceneChangeEvent;
			import listeners.TaskChangeEvent;
			
			import mx.events.FlexEvent;
			
		//	Security.allowDomain("www.youtube.com");
			
			private var _currentGroupID:String;
			
			protected function initApp(event:FlexEvent):void {
				this.addEventListener(resourceManager.getString('resources', 'SERVER_URL'), handleLoginAccepted);
				this.addEventListener(resourceManager.getString('resources', 'SCENE_CHANGED'), handleSceneChange);
				this.addEventListener(resourceManager.getString('resources', 'TASK_CHANGED'), handleTaskChange);
				
				// FOR TESTING: In the case of no server connection
				// this.currentState = "loggedIn";
			}
			
			public function get currentGroupID():String
			{
				return _currentGroupID;
			}
			
			protected function handleLoginAccepted(evt:LoginAcceptedEvent):void {
				if(evt.groupId == resourceManager.getString('resources', 'TEACHER_LOGIN_ID')) {
					this.currentState = "loggedInTeacher";
				}
				else {
					this.currentState = "loggedIn";
				}
				_currentGroupID = evt.groupId;
			}
			protected function handleSceneChange(evt:SceneChangeEvent):void {
				var currentIntreface:String = "studentInterface";
				if(this.currentState == "loggedInTeacher")
					currentIntreface = "teacherInterface";
				
				this[currentIntreface].changeScene(evt.sceneId);
				trace("scene changed to id: "+ evt.sceneId);
			}
			protected function handleTaskChange(evt:TaskChangeEvent):void {
				var currentIntreface:String = "studentInterface";
				if(this.currentState == "loggedInTeacher")
					currentIntreface = "teacherInterface";
				
				this[currentIntreface].changeTask(evt.taskId);
				trace("task changed to id: "+ evt.taskId);
			}
			
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="loggedOff" />
		<s:State name="loggedIn" />
		<s:State name="loggedInTeacher" />
	</s:states>
	
	<s:VGroup top="10" left="10" right="10" bottom="10">
		<!-- Header banner component -->
		<local:Header />
		
		<!-- Logging component -->
		<local:GroupLogger id="groupLogger" width="100%" height="100%" includeIn="loggedOff" />
		
		<!-- Tabbar component -->
		<local:Tabbar width="100%" excludeFrom="loggedOff"/>
		
		<!-- Student space -->
		<local:StudentInterface id="studentInterface" includeIn="loggedIn" width="100%" height="100%"></local:StudentInterface>
		
		<!-- Teacher space -->
		<local:TeacherInterface id="teacherInterface" includeIn="loggedInTeacher" width="100%" height="100%">
			<s:Label text="welcome teacher" horizontalCenter="0" verticalCenter="0" />
		</local:TeacherInterface>
	</s:VGroup>
	
	
</s:WindowedApplication>
