<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
					   xmlns:s="library://ns.adobe.com/flex/spark" 
					   xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:local="*" xmlns:components="components.*" creationComplete="initApp(event)">
	
	<fx:Metadata>
		[ResourceBundle("resources")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import listeners.LoginAcceptedEvent;
			
			import mx.events.FlexEvent;
			
			protected function initApp(event:FlexEvent):void {
				this.addEventListener(resourceManager.getString('resources', 'SERVER_URL'), handleLoginAccepted);
			}
			
			protected function handleLoginAccepted(evt:LoginAcceptedEvent):void {
				this.currentState = "loggedIn";
				ll.text = "Welcome group: "+evt.groupId;
			}
			
		]]>
	</fx:Script>
	<s:states>
		<s:State name="loggedOff" />
		<s:State name="loggedIn" />
	</s:states>
	
	<!-- Logging component -->
	<local:GroupLogger id="groupLogger" horizontalCenter="0" verticalCenter="0" excludeFrom="loggedIn" />
	<components:CollectionList id="collectionList" x="360" y="700" />
	
	<s:Group excludeFrom="loggedOff">
		<s:Label id="ll" horizontalCenter="0" verticalCenter="0" />
	</s:Group>
</s:WindowedApplication>
